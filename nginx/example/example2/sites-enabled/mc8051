server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

# Non Prefix
server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name _;
    index index.html index.htm index.php;
    root /var/www/html/;

    ssl_certificate /etc/letsencrypt/live/mc8051.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mc8051.de/privkey.pem;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    if ($host = "mc8051.de" ) {
        rewrite ^/(.*)$ https://www.mc8051.de/$1 permanent;
    }

    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}

# Website
server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name www.mc8051.de;
    index index.html index.htm index.php;
    root /var/www/html/mc8051/;

    ssl_certificate /etc/letsencrypt/live/mc8051.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/mc8051.de/privkey.pem;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    location / {
        #try_files $uri $uri/ =404;
        #auth_basic "Restricted";
        #auth_basic_user_file /var/www/html/mc8051/.htpasswd;
        try_files $uri $uri/ /index.php?$args;
    }


    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}

# forum
